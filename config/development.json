{
    
    "express": {
        "view cache": false,
        "view engine": "dust",
        "views": "path:./public/templates"
    },

    "view engines": {
        "dust": {
            "module": "engine-munger",
            "renderer": {
                "method": "dust",
                "arguments": [
                    { "cache": false },
                    {
                        "views": "config:express.views",
                        "view engine": "config:express.view engine",
                        "specialization": "config:specialization",
                        "i18n": "config:i18n"
                    }
                ]
            }
        }
    },

    "middleware": {

        "session": {
            "module": {
                "name": "path:./lib/mongo-session",
                "arguments": [
                    {
                        "key": "KWfCeYrNS26buo",
                        "secret": "8zfgHmHzVFTmdaRwngKSd5UGiGpFjUouu",
                        "cookie": {
                            "path": "/",
                            "httpOnly": true,
                            "maxAge": null
                        },
                        "proxy": null,
                        "resave":false,
                        "saveUninitialized":false
                    },
                    {
                        "host": "localhost",
                        "port": 27017,
                        "db": "rsct",
                        "autoReconnect": true,
                        "w": 1,
                        "ssl": false
                    }
                ]
            },
            "config": {
                "ttl": 3600
            },
            "secret": "KWfCeYrNS26buo"
        },

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "kraken-devtools",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {   
                        "template": {
                            "module": "kraken-devtools/plugins/dustjs",
                            "files": "/templates/**/*.js",
                            "base": "templates",
                            "i18n": "config:i18n"
                        },
                        "css": {
                            "module": "kraken-devtools/plugins/less",
                            "files": "/css/**/*.css"
                        },
                        "copier": {
                            "module": "kraken-devtools/plugins/copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        }
    }
}
